<?xml version="1.0" encoding="utf-8"?>
<com.defineview.bill.mydefineview.viewgroup.VDHDeepLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.VDHDeepLayoutActivity"
    >

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#44ff0000"
        android:clickable="true"
        android:gravity="center"
        android:text="I can be dragged !"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#44ff00"
        android:clickable="true"
        android:gravity="center"
        android:text="I can be go back to origin place !"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#44110000"
        android:clickable="true"
        android:gravity="center"
        android:text="I can be edge-draged !"/>

</com.defineview.bill.mydefineview.viewgroup.VDHDeepLayout>
